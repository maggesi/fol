/* ========================================================================= */
/* Semantics for first order logic.                                          */
/* ========================================================================= */

sig fol.

/* ------------------------------------------------------------------------- */
/* Terms.                                                                    */
/* ------------------------------------------------------------------------- */

kind term, form type.

/* ------------------------------------------------------------------------- */
/* Formulas.                                                                 */
/* ------------------------------------------------------------------------- */

type truth, false form.
type neg form -> form.
type and, or, imp, iff form -> form -> form.
type forall, exists (term -> form) -> form.

/* ------------------------------------------------------------------------- */
/* Domain.                                                                   */
/* ------------------------------------------------------------------------- */

type domain A -> o.
type all,ex (A -> o) -> o.

/* ------------------------------------------------------------------------- */
/* Term evaluation.                                                          */
/* ------------------------------------------------------------------------- */

type emptyenv term -> A -> o.
type extend term -> A -> (term -> A -> o) -> term -> A -> o.
type termval (term -> A -> o) -> term -> A -> o.

/* ------------------------------------------------------------------------- */
/* Interpretation of formulas.                                               */
/* ------------------------------------------------------------------------- */

type holds (term -> A) -> form -> o.
type topholds form -> o.

end
